{
  "name": "tesla-studio-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Tesla Studio - 微信小程序 & Web版 Monorepo",
  "scripts": {
    "dev:mini": "turbo run dev --filter=miniprogram",
    "dev:web": "turbo run dev --filter=web",
    "dev:studio": "cd dev-studio && pnpm dev",
    "dev": "turbo run dev",
    "build:mini": "turbo run build --filter=miniprogram",
    "build:web": "turbo run build --filter=web",
    "build": "turbo run build --filter=web",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}